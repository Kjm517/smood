<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".smood_main_activity"
    android:background="@drawable/background">

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:id="@+id/stick_switch"
        android:layout_marginLeft="120dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="60dp"
        app:ss_iconPadding="18dp"
        app:ss_iconSize="22dp"
        app:ss_leftText="Off"
        app:ss_rightText="On"
        app:ss_selectedTextSize="18sp"
        app:ss_sliderBackgroundColor="@color/colorStickyBG"
        app:ss_switchColor="@color/colorSticky"
        app:ss_textColor="@android:color/white"
        app:ss_textSize="12sp"

        />
    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/intensity_switch"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="77dp"
        android:layout_marginBottom="300dp" />

    <TextView
        android:id="@+id/intensity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="149dp"
        android:layout_marginLeft="149dp"
        android:text="Intensity"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        />

    <android.support.v7.widget.AppCompatAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:text="00:00"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="130dp"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="430dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="430dp"/>


</RelativeLayout>